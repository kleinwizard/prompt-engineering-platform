{
  "name": "prompt-engineering-platform",
  "version": "1.0.0",
  "description": "Comprehensive Prompt Engineering Platform - Full Stack Implementation",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "cd apps/api && npm run start:dev",
    "dev:web": "cd apps/web && npm run dev",
    "dev:extension": "cd apps/extension && npm run dev",
    "build": "npm run build:packages && npm run build:api && npm run build:web && npm run build:extension",
    "build:packages": "npm run build:shared && npm run build:prompt-engine && npm run build:llm-client && npm run build:ui-kit",
    "build:shared": "cd packages/shared && npm run build",
    "build:prompt-engine": "cd packages/prompt-engine && npm run build",
    "build:llm-client": "cd packages/llm-client && npm run build",
    "build:ui-kit": "cd packages/ui-kit && npm run build",
    "build:api": "cd apps/api && npm run build",
    "build:web": "cd apps/web && npm run build",
    "build:extension": "cd apps/extension && npm run build",
    "test": "npm run test:packages && npm run test:api && npm run test:web",
    "test:packages": "cd packages/shared && npm test && cd ../prompt-engine && npm test && cd ../llm-client && npm test && cd ../ui-kit && npm test",
    "test:api": "cd apps/api && npm run test",
    "test:web": "cd apps/web && npm test",
    "lint": "npm run lint:api && npm run lint:web && npm run lint:extension",
    "lint:api": "cd apps/api && npm run lint",
    "lint:web": "cd apps/web && npm run lint",
    "lint:extension": "cd apps/extension && npm run lint",
    "db:migrate": "cd apps/api && npm run db:migrate",
    "db:seed": "cd apps/api && npm run db:seed",
    "db:reset": "cd apps/api && npm run db:reset",
    "docker:up": "cd infrastructure/docker && docker-compose up -d",
    "docker:down": "cd infrastructure/docker && docker-compose down",
    "docker:logs": "cd infrastructure/docker && docker-compose logs -f"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}